extends ../layouts/base.pug

block content
    if products.length > 0
        h1 my products
        ul
            each product in products
                li
                    span #{product.title}
                    span  #{product.price}$
                    p #{product.desc}
                    form(action=`/admin/delete-product/${product.id}` method="POST")
                        button.d-ib.mr-1(type="submit") delete
    else
        h1 no products
