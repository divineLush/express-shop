extends ../layouts/base.pug

block content
    if products.length > 0
        h1 my products
        ul
            each product in products
                li
                    span #{product.title} #{product.price}$
                    p #{product.desc}
                    button.d-ib.mr-1 delete
                    button.d-ib edit
    else
        h1 no products
