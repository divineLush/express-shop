extends ../layouts/base.pug

block content
    if products.length > 0
        h1 some products
        ul
            each product in products
                li
                    a.mb-1(href=`/products/${product.id}`)
                        | #{product.title}
                    span  #{product.price}$
                    form(action=`/cart/add/${product.id}` method="POST")
                        button(type="submit") add to cart
    else
        h1 no products
