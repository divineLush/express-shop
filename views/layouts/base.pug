doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{title}
        link(rel="stylesheet" href="/css/main.css")
    body
        header.base-header
            nav.content-wrapper.flex
                a.header-link.mr-3(href="/" class=`${title === 'home' ? '_active' : ''}`) home
                a.header-link.mr-3(href="/products" class=`${title === 'shop' ? '_active' : ''}`) shop
                a.header-link.mr-3(href="/cart" class=`${title === 'cart' ? '_active' : ''}`) cart
                a.header-link.mr-3(href="/orders" class=`${title === 'orders' ? '_active' : ''}`) orders
                a.header-link.mr-3(href="/admin/add-product" class=`${title === 'add product' ? '_active' : ''}`) add product
                a.header-link(href="/admin/products" class=`${title === 'admin product list' ? '_active' : ''}`) admin products
        main.content-wrapper.p-1-2
            block content
